{
  "compilerOptions": {
    "types": ["node", "jest"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./built",
    "sourceMap": true,
    "target": "es6",
    "rootDir": "./src",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src/test/*.ts/"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
